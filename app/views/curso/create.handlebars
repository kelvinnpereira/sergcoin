<div id="create" class="container">
	<div class="row">
		<div class="col-sm">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Home</a></li>
					<li class="breadcrumb-item"><a href="/curso">Cursos</a></li>
					<li class="breadcrumb-item active" aria-current="page">Adicionar Curso</li>
				</ol>
			</nav>
		</div>
	</div>
	<div class="row">
		<div class="col-sm">
			<h2>Adicionar Curso</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-sm">
			<form id="cursoform" action="" method="post" novalidate>
				<fieldset>
					<div class="form-group">
						<label for="sigla">Sigla</label>
						<input type="text" class="form-control" name="sigla" id="sigla"
							placeholder="Digite a Sigla do Curso" value="{{curso.sigla}}">
					</div>
					<div class="form-group">
						<label for="nome">Nome</label>
						<input type="text" class="form-control" name="nome" id="nome"
							placeholder="Digite o Nome do Curso" value="{{curso.nome}}" required>
						<div class="invalid-feedback d-block">{{showError errors 'nome'}}</div>
					</div>
					<div class="form-group">
						<label for="descricao">Descrição</label>
						<textarea form="cursoform" class="form-control" name="descricao" id="descricao"
							rows="3">{{curso.descricao}}</textarea>
					</div>
					<fieldset class="form-group">
						<legend>Área Do Curso</legend>
						{{#each areas}}
						<div class="form-check">
							<label class="form-check-label">
								<input type="radio" class="form-check-input" name="id_area" id="{{inc @index}}"
									value="{{inc @index}}" {{checked ../curso.id_area (inc @index)}}>
								{{nome}}
							</label>
						</div>
						{{/each}}
					</fieldset>
					<input type="hidden" name="_csrf" value="{{csrfToken}}">
					<input type="submit" class="btn btn-primary" value="Adicionar">
				</fieldset>
			</form>
		</div>
	</div>
</div>